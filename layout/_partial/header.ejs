<header>
    <div class="header-row row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <a class="header-img" href="<%- url_for() %>" ><img src="/self.png" class="img-responsive center-block img-circle img-logo" alt="<%= config.title %>" title="<%= config.title %>"></a>
        </div>
    </div>
    <div class="header-row row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <p class="header-des text-center"><%= config.description %></p>
        </div>
    </div>
    <div class="header-row row">
        <nav class="navbar navbar-none navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#z-nav" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="z-nav">
                    <ul class="nav-center nav navbar-nav">
                        <% for (var i in theme.menu){ %>
                            <% if ((is_home() && theme.menu[i] == '/') || (is_category(i)) || (is_current('about') && theme.menu[i] == '/about/')) { %>
                                <li class="active"><%- link_to(theme.menu[i], i) %></li>
                            <% }else { %>
                                <li><%- link_to(theme.menu[i], i) %></li>
                            <% } %>
                        <% } %>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
</header>
